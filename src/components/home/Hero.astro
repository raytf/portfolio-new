<style>
  :root {
    --initial-clip-path: inset(50% 0% 50% 0% round 0rem 0rem);
    --final-clip-path: inset(0% 0% 0% 0% round 0.5rem 0.5rem);
  }

  #hero_image {
    background-image: url("beach.webp");
    background-size: auto 111%;
    background-repeat: no-repeat;
    background-position: 27% 0%;
    opacity: 0.8;

    clip-path: var(--initial-clip-path);
    opacity: 0;

    /* Single animation with different property durations */
    animation: revealBackground 2.5s ease-in-out forwards;
    animation-delay: 1s;
  }

  #hero_text--greeting {
    opacity: 0;
    animation: fadeIn 2s ease forwards;
  }

  /* Individual staggered animations for title and social links */
  #hero_text--title {
    animation: fadeIn 2s ease forwards;
    animation-delay: 2s; /* Starts after greeting animation */
  }

  #social-link-1 {
    animation: fadeIn 1.5s ease forwards;
    animation-delay: 2.5s; /* Starts after title animation */
  }

  #social-link-2 {
    animation: fadeIn 1.5s ease forwards;
    animation-delay: 2.75s; /* Slightly delayed from first social link */
  }

  #social-link-3 {
    animation: fadeIn 1.5s ease forwards;
    animation-delay: 3s; /* Slightly delayed from second social link */
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Default animation for mobile screens */
  @keyframes revealBackground {
    0% {
      clip-path: var(--initial-clip-path);
      opacity: 0;
      background-size: auto 180%;
    }
    100% {
      clip-path: var(--final-clip-path);
      opacity: 0.25;
      background-size: auto 170%;
    }
  }

  /* Media query for large/wide screens */
  @media (min-width: 1024px) {
    #hero_image {
      background-position: 44% 44%;
    }

    @keyframes revealBackground {
      0% {
        clip-path: var(--initial-clip-path);
        opacity: 0;
        background-size: 166%;
      }
      100% {
        clip-path: var(--final-clip-path);
        opacity: 0.25;
        background-size: 155%;
      }
    }
  }
</style>

<script>
  // Add scroll functionality to the scroll down button
  document.addEventListener("DOMContentLoaded", () => {
    const scrollButton = document.getElementById("scroll-down-button");

    if (scrollButton) {
      scrollButton.addEventListener("click", () => {
        // Get the next section after the hero section
        const heroSection = document.getElementById("hero");

        if (heroSection && heroSection.nextElementSibling) {
          // Smooth scroll to the next section
          heroSection.nextElementSibling.scrollIntoView({ behavior: "smooth" });
        }
      });
    }
  });
</script>
